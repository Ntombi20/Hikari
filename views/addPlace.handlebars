<div class="container">
  <form action = "/places/add" method = "POST" enctype = "multipart/form-data">
    <div class="form-group">
      <label for="name">Name</label>
      <input type="text" class="form-control" id="name" placeholder="Company name" name="name">
    </div>
    <div class="form-group">
        <label for="description">Description</label>
      <textarea class="form-control" rows="3" id="description" placeholder="Company description" name="description"></textarea>
    </div>
    <div class="form-group form-inline">
      <input type="text" class="form-control" id="latitude" name="latitude" placeholder="latitude">
      <input type="text" class="form-control" id="longitude"  name="longitude" placeholder="longitude">
    </div>
    <div class="form-group form-inline">
      <label for="email">Contact Details</label>
      <input type="text" class="form-control" id="tel" name="tel" placeholder="telephone">
      <input type="email" class="form-control" id="email" name="email" placeholder="email">
    </div>
    <div class="form-group">
      <label for="img">File input</label>
      <input type="file" id="img" name = "img">
      <p class="help-block">Upload profile image</p>
    </div>
    <div class="form-group">
      <label for="category">Category</label>
      <select class="form-control" name="category">
        {{#categories}}
        <option value="{{id}}">{{name}}</option>
        {{/categories}}
      </select>
    </div>
    <button type="submit" class="btn btn-default">Submit</button>
  </form>

</div>
